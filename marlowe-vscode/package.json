{
	"name": "marlowe",
	"displayName": "marlowe",
	"description": "Language support and more for Marlowe",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.helloWorld"
	],
	"main": "./output/Main/index",
	"contributes": {
		"commands": [{
            "command": "extension.helloWorld",
			"title": "Hello World"
		}],
		"languages":[
			{
				"id": "marlowe",
				"extensions": [
					".marlowe"
				]
			}
		],
		"grammars":[
			{
				"language": "marlowe",
				"scopeName": "source.marlowe",
				"path": "./syntaxes/marlowe.json"
			}
		]
	},
	"scripts": {
		"compile": "spago build",
		"watch": "spago build --watch",
		"test": "spago --no-psa test"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.40.0",
		"eslint": "^6.6.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"vscode-test": "^1.2.2"
	}
}
